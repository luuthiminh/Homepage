@model Homepage.Models.StoreOwner
@{
    Layout = "_Admin";
}
<form method="post" asp-controller="Admin" asp-action="EditStoreOwner">
    <h2 class="cangiua gachchan text-center">Edit Customer Account</h2>
    <div class="form-group">
        <label class="h4 text-success" asp-for="@Model.Id"></label>
        <input class="form-control" asp-for="@Model.Id" disabled />
        <span class="text-danger" asp-validation-for="@Model.Id"></span>
    </div>
    <div class="form-group">
        <label class="h4 text-success" asp-for="@Model.SId">StoreOwner's ID</label>
        <input class="form-control" asp-for="@Model.SId" />
        <span class="text-danger" asp-validation-for="@Model.SId"></span>
    </div>
    <div class="form-group">
        <label class="h4 text-success">Full Name</label>
        <input class="form-control" asp-for="@Model.SName" />
        <span class="text-danger" asp-validation-for="@Model.SName"></span>
    </div>
    <div class="form-group">
        <label class="h4 text-success" asp-for="@Model.SPhone">StoreOwner's Phone</label>
        <input class="form-control" asp-for="@Model.SPhone" />
        <span class="text-danger" asp-validation-for="@Model.SPhone"></span>
    </div>
    <div class="form-group">
        <label class="h4 text-success" asp-for="@Model.SUsername">Username </label><br>
        <input class="form-control mt-3" asp-for="@Model.SUsername" />
        <span class="text-danger" asp-validation-for="@Model.SUsername"></span>
    </div>
    <div class="form-group">
        <label class="h4 text-success" asp-for="@Model.SPassword">Password</label><br>
        <input class="form-control mt-3" asp-for="@Model.SPassword" />
        <span class="text-danger" asp-validation-for="@Model.SPassword"></span>
    </div>
    <div class="form-group">
        <label class="h4 text-success" asp-for="@Model.SGender">Customer's Gender</label><br />
        @if (Model.SGender == 'M')
        {
            <div class="form-check">
                <input class="form-check-input" type="radio" name="SGender" value='M' checked>
                <label class="form-check-label"> Male </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="SGender" value='F'>
                <label class="form-check-label"> Female</label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="SGender" value='O'>
                <label class="form-check-label"> Other </label>
            </div>
        }
        else if (Model.SGender == 'F')
        {
            <div class="form-check">
                <input class="form-check-input" type="radio" name="SGender" value='M'>
                <label class="form-check-label"> Male </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="SGender" value='F' checked>
                <label class="form-check-label"> Female </label>
            </div>

            <div class="form-check">
                <input class="form-check-input" type="radio" name="SGender" value='O'>
                <label class="form-check-label"> Other </label>
            </div>
        }
        else
        {
            <div class="form-check">
                <input class="form-check-input" type="radio" name="SGender" value='M'>
                <label class="form-check-label"> Male</label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="SGender" value='F'>
                <label class="form-check-label"> Female</label>
            </div>

            <div class="form-check">
                <input class="form-check-input" type="radio" name="SGender" value='O' checked>
                <label class="form-check-label">Other </label>
            </div>
        }

        <span class="text-danger" asp-validation-for="@Model.SGender"></span>
    </div>
    <div class="form-group">
        <label class="h4 text-success" asp-for="@Model.SAvatar">Customer's Avatar</label><br>
        <img src="@Model.SAvatar" width="80" height="80" /><br />
        <input class="form-control mt-3" asp-for="@Model.SAvatar" />
        <span class="text-danger" asp-validation-for="@Model.SAvatar"></span>
    </div>
    <div class="form-group">
        <a class="btn btn-success" asp-controller="Admin" asp-action="StoreOwner">
            Back
        </a>
        <input type="submit" class="btn btn-warning" value="Edit" />
    </div>
</form>