@model Homepage.Models.Book

<link rel="stylesheet" href="{/css/Detail}">
<div class="preview_main">
    <div class="preview_content">
        <!-- Begin New Product -->
        <div class="preview_top">
            <div class="clear"></div>
        </div>
    </div>
    <div class="container">
        <div class="card">
            <div class="container-fliud">
                <div class="wrapper row">
                    <div class="preview col-md-6">
                        <div class="preview-pic tab-content">
                            <div class="tab-pane active" id="pic-1">
                                <img src="@Model.Image">
                            </div>
                        </div>
                    </div>
                    <div class="details col-md-6">
                        <h3 class="product-title">@Model.Title</h3>
                        <h4 class="price">Price: <span>@Model.Price</span></h4>
                        <h4 class="price">Price: <span>@Model.Quantity</span></h4>
                        <h4 class="price">Price: <span>@Model.Author</span></h4>
                        <p class="product-description">Gifts details: @Model.Description</p>
                        <p class="Key">
                            <strong>
                                KEY ATTRIBUTES : <br>
                                •	Jute Potli <br>
                                •	Pink Carnations (5 units) <br>
                                •	Purple Statice <br>
                                •	Blue Floral Printed Paper Bag <br>
                                •	Size : 25cm X 2.5cm X 25cm (l x b)
                            </strong>
                        </p>
                        
                        <div class="buy">
                            <form method="post" asp-controller="Order" asp-action="Order_Book">
                                <input type="hidden" name="id" value="@Model.Id">
                                <div class="form-group">
                                    <b><label for="formGroupExampleInput" style="font-family:'Rubik', sans-serif; font-size:15px;">Oder Quanyity: </label></b>
                                    <input  type="number" name="quantity" min="1" max="@Model.Quantity">
                                </div>
                                <input type="submit" class="btn btn-outline-info" value="Add to cart">
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>