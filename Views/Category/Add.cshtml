@model Homepage.Models.Request
@{
    Layout = "_Admin";
}
<div class="container">
    <div class="p-2 pt-md-5 pb-md-3 mx-auto">
        <h1 class="display-4">Add New Category</h1>
    </div>

    <form asp-controller="Category" asp-action="MakeRequest" method="post">
        <div class="form-group">
            <label class="font-weight-bold">ID</label>
            <input class="form-control" asp-for="@Model.CatId">
            <span class="text-danger" asp-validation-for="@Model.CatId"></span>
        </div>

        <div class="form-group">
            <label class="font-weight-bold">Name</label>
            <input class="form-control" asp-for="@Model.CatName">
            <span class="text-danger" asp-validation-for="@Model.CatName"></span>
        </div>

        <div class="form-group">
            <label class="font-weight-bold">Description</label>
            <input class="form-control" asp-for="@Model.CatDescription">
            <span class="text-danger" asp-validation-for="@Model.CatDescription"></span>
        </div>

        <input hidden class="form-control" name="Status" value="1">
        <button type="submit" class="btn btn-dark"><i class="fa-solid fa-check"></i> Add</button>
    </form>
</div>