@model List<Request>
@{
    Layout = "_Admin";
}

<div class="container">
    <div class="table-responsive">
        <div class="table-wrapper">
            <div class="table-title">
                <div class="row">
                    <div class="col-xs-5">
                        <h2>Request <b>Management</b></h2>
                    </div>
                </div>
            </div>
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Name</th>
                        <th scope="col">Description</th>
                        <th scope="col">Status</th>
                        <th scope="col">&nbsp;</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var request in Model)
                    {
                        <tr>
                            <td>@request.CatId</td>
                            <td>@request.CatName</td>
                            <td>@request.CatDescription</td>
                            <td><span class="status text-warning">&bull;</span> Pending</td>
                            <td>
                                <a type="button" class="" asp-controller="Category" asp-action="Accept" asp-route-id="@request.Id"><i class="fa-solid fa-check" style="color:green"></i></a>
                            </td>
                            <td>
                                <a type="button" class="" asp-controller="Category" asp-action="Reject" asp-route-id="@request.Id"><i class="fa-solid fa-trash" style="color:red"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>